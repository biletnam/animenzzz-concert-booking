<br />
<div class="dark-panel">
    <h2>登录</h2>
    <hr />
    <%= devise_error_messages! %>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', :class => 'form-login' }) do |f| %>
        <div class="form-group">
            <%= f.email_field :email, :autofocus => true, :placeholder => '邮箱' %>
            <%= f.password_field :password, :placeholder => '密码' %>
        </div>
        <div>
            <% if devise_mapping.rememberable? %>
              <div class="float-left user-select-none">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, '记住密码' %>
              </div>
            <% end %>
            <% if devise_mapping.recoverable? %>
              <div class="float-right">
                <%= link_to '忘记密码？', new_password_path(resource_name) %>
              </div>
            <% end %>
        </div>
        <br />
        <div class="form-group">
            <%= f.submit '登录', :class => 'button' %>
        </div>
        <%= link_to '注册', new_user_registration_path %>
    <% end %>
</div>

<% content_for :breadcumb do %>
<ul class="nav-bar float-left nav-breadcumb">
    <li><%= link_to '首页', '/' %></li>
    <li>登录</li>
</ul>
<% end %>