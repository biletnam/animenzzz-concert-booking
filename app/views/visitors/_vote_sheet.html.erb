<div class="coverflow-item">
    <div class="coverflow-content">
        <div class="coverflow-card">
            <div class="coverflow-card-image">
                <%= image_tag recital.index_image.url %>
            </div>
        </div>
        <div class="coverflow-overlay-text">
            <%= link_to recital_path recital do %>
                <button class="recital-detail-btn">查看详情</button>
            <% end %>
            <div class="recital-info-bottom">
                    <div class="coverflow-recital-title"><%= recital.city %>站</div>
                    <div class="hide-mobile">
                        <%= render 'visitors/chengdu_content' %>
                    </div>
                    <button class="recital-detail-btn hide-desktop" data-toggle="modal" data-target="#modal-chengdu-overlay">
                        查看详情
                    </button>
                    <br />
                <% end %>
            </div>
        </div>
        <div class="coverflow-overlay-right recital-info-right">
            <div class="coverflow-recital-title">
                <%= recital.split_city %>
                <div>站</div>
            </div>
            <div class="coverflow-recital-date">
                <% if recital.start_time %>
                    <div><%= recital.start_time.month %></div>
                    <div>月</div>
                    <div><%= recital.start_time.day %></div>
                    <div>日</div>
                <% end %>
                <!--<%= recital.start_time.strftime('%-m 月 %-d 日') unless recital.start_time.nil? %>-->
            </div>
            <div class="recital-status">
                <% if recital.sold_out? %>
                  <% if recital.city != '成都' %>
                        已<br />预<br />订<br />完
                  <% else %>
                        已<br />售<br />完
                  <% end %>
                <% else %>
                  <% if recital.city != '成都' %>
                        正<br />在<br />预<br />订
                  <% else %>
                        正<br />在<br />售<br />票
                  <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>